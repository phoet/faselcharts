!!! 5
%html
  %head
    %title= title
    
    %meta{charset: "utf-8"}
    %meta{name: "description", content: title}
    %meta{name: "author", content: "Peter Schröder"}
    %meta{name: "language", content: "german, de"}
    %meta{'http-equiv' => "refresh", content: "300; URL=/"}
    
    %link{rel: 'stylesheet', href: "/css/application.css?#{Time.now.to_i}", type: 'text/css'}
    %link{rel: 'shortcut icon', href: '/img/icon.png'}
    
    %script{src: "https://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js", type: "text/javascript"}
    %script{src: "/js/application.js?#{Time.now.to_i}", type: "text/javascript"}

  %body
    %header
      %h1.afs-yanone-kaffeesatz= title

    %section
      %h2 Faselung des Tages:
      %p#cite
        %cite= "“#{@random_cite}”"
        %a#reload{href: '#', title: 'Press the "r" key to reload!'} &#x21A9;
      #backup.hidden
        %ul
          - @cites.each do |cite|
            %li= "“#{cite}”"

    %section#search
      %h2 Faselsuche:
      %div#searchwrapper
        %form{action: "/#search", type: "get"}
          %input.searchbox{type: "text", name: "s", placeholder: "#{@random_cite[0..20]}...", value: @search_term}
      -if @search_term
        -if @search_results and not @search_results.empty?
          %p= "Deine Suche nach “#{@search_term}” ergab:"
          %ul
            - @search_results.each do |result|
              %li
                %p= "“#{result}”"
        -else
          %p Leider nichts gefunden...
          %p
            %a{href: "/?add=true"} “#{@search_term}” hinzufügen!

    %section
      %h2 Fasel-Scoring Coming soon!

    %footer
      %h3
        Brought to you by:
        %a.jedbeard{href: "http://twitter.com/jedbeard"} @jedbeard

    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-2711231-9']);
      _gaq.push(['_setDomainName', '.faselcharts.de']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

